# set monitor names
set $leftMonitor DisplayPort-2
set $rightMonitor HDMI-A-0

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $steam
bindsym $mod+4 workspace $docs
bindsym $mod+5 workspace $games
bindsym $mod+6 workspace $spotify
bindsym $mod+7 workspace $discord
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
