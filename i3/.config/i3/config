###### Keybinds ################################
# Movement between workspaces
bindsym $mod+Tab workspace next_on_output
bindsym $mod+Shift+Tab workspace prev_on_output

# Movement in workspaces
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move current workspace to different monitor
bindsym $mod+Shift+Control+Left move workspace to output left
bindsym $mod+Shift+Control+h move workspace to output left
bindsym $mod+Shift+Control+Right move workspace to output right
bindsym $mod+Shift+Control+l move workspace to output right

# ex: in 1 -(mod+2)-> 2 -(mod+2)-> 1
workspace_auto_back_and_forth yes

# scratchpad (i.e. hide window)
# Make the currently focused window a scratchpad
bindsym $mod+Shift+KP_divide move scratchpad
# Show the first scratchpad window
bindsym $mod+KP_divide scratchpad show

# make numpad work with workspace switching
bindsym $mod+mod2+KP_1 workspace $ws1
bindsym $mod+mod2+KP_2 workspace $ws2
bindsym $mod+mod2+KP_3 workspace $steam
bindsym $mod+mod2+KP_4 workspace $docs
bindsym $mod+mod2+KP_5 workspace $games
bindsym $mod+mod2+KP_6 workspace $spotify
bindsym $mod+mod2+KP_7 workspace $discord
bindsym $mod+mod2+KP_8 workspace $ws8
bindsym $mod+mod2+KP_9 workspace $ws9

# make numpad work with moving container to workspace (source: https://github.com/i3/i3/issues/2558#issuecomment-405577744)
bindsym $mod+Shift+Mod2+KP_End move container to workspace $ws1; workspace $ws1
bindsym $mod+Shift+Mod2+KP_Down move container to workspace $ws2; workspace $ws2
bindsym $mod+Shift+Mod2+KP_Next move container to workspace $steam; workspace $steam
bindsym $mod+Shift+Mod2+KP_Left move container to workspace $docs; workspace $docs
bindsym $mod+Shift+Mod2+KP_Begin move container to workspace $games; workspace $games
bindsym $mod+Shift+Mod2+KP_Right move container to workspace $spotify; workspace $spotify
bindsym $mod+Shift+Mod2+KP_Home move container to workspace $discord; workspace $discord
