#!/bin/bash

SUDO_COMMAND_LIST=(
  "installDiscord"
  "update"
)

# only include ones that are installed locally
# while read -r localCommand; do
#   BASE_COMMAND_NAME=$(basename $localCommand)
#   echo "B: $BASE_COMMAND_NAME"
# done <<<"$(find "$HOME/.local/bin")"

echo "################ from \"addSpecialCommandsToSudoers\" script"
printf "\r"
for COMMAND in "${SUDO_COMMAND_LIST[@]}"; do
  echo "$USER ALL = (root) NOPASSWD: $COMMAND"
  printf "\r"
done
echo "################ from \"addSpecialCommandsToSudoers\" script"
printf "\r"
